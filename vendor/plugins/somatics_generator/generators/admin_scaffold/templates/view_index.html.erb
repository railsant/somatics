<div class="contextual"></div>

<h2><%= plural_name.humanize %></h2>

<!-- Redmine Filters-->
<%%= filters %>

<form action="/<%= plural_name %>" method="post">
  <div class="autoscroll">
  <%%= render :partial => 'list', :locals => {:<%= plural_name %> => @<%= plural_name %>} %>
  </div>
</form>
<%%= will_paginate @<%= plural_name%>, :renderer => SomaticLinkRenderer %>

<!-- TODO Export-->
<p class="other-formats">Also available in:
	<span><%%=link_to 'Atom', formatted_admin_<%= plural_name %>_path(:atom), :class => 'atom'%></span>
	<span><%%=link_to 'CSV',  formatted_admin_<%= plural_name %>_path(:csv),  :class => 'csv' %></span>
	<span><%%=link_to 'XLS',  formatted_admin_<%= plural_name %>_path(:xls),  :class => 'xls' %></span>	
	<span><%%=link_to 'PDF',  formatted_admin_<%= plural_name %>_path(:pdf),  :class => 'pdf' %></span>
</p>
<div style="clear:both;"></div>
    
<%% content_for :sidebar do %>
  <h3>Actions</h3>
  <%%= link_to 'New <%= singular_name %>', new_admin_<%= singular_name %>_path %>
<%% end %>