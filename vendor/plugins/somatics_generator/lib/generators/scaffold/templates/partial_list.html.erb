<table class="list issues">
	<thead>
		<tr>
		  <th>
        <a href="/<%= plural_name %>" onclick="toggleIssuesSelection(Element.up(this, &quot;form&quot;)); return false;" title="Check all/Uncheck all">
          <%%= image_tag 'toggle_check.png', :alt => "Toggle_check"%>
        </a>
      </th>
      <th title="Sort by &quot;#&quot;">
        <%%= link_to_remote('ID', {
            :url => {:action => 'list', :params => params.merge({:sort => (params[:sort] == 'id' || params[:sort].blank? ? 'id_reverse' : 'id' ), :page => nil})},
            :update => 'content',
            :method => :get
        }, {
          :title => "Sort by #",
          :href => url_for(:action => 'list', :params => params.merge({:sort => (params[:sort] == 'id' || params[:sort].blank? ? 'id_reverse' : 'id' ), :page => nil})),
          :class => "sort #{'asc' if params[:sort] == 'id'} #{'desc' if params[:sort] == 'id_reverse'}"
        }) %>
      </th>
      <th title="Sort by &quot;Attribute1&quot;"><%%= sort_link_helper 'Attribute1', 'attribute1'%></th>
		</tr>
	</thead>
	<tbody>
	<%% unless <%= plural_name %>.empty? %>
		<%% for <%= singular_name %> in <%= plural_name %> %>		
		<tr id="<%% dom_id(<%=singular_name%>)%>" class="hascontextmenu <%%= cycle 'odd' , 'even' %>  issue ">
      <td class="checkbox"><input name="ids[]" type="checkbox" value="<%= singular_name %>.id" /></td>
      <td><%%=link_to <%= singular_name %>.id, <%= singular_name %>%></td>
      <td class="id"><%%=h <%= singular_name %>.id %></td>
    </tr>		  
		<%% end %>
	<%% else -%>
		<tr class="datos"> 
		  <td colspan="7" align="center">No Data available</td> 
		</tr> 
	<%% end -%>	
</tbody>
</table>